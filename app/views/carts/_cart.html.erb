<h2>Twój koszyk</h2>
  <table>
    <%= render(cart.line_items) %>
    <tr class="total_line">
      <td colspan="2">Razem</td>
      <td class="total_cell">
        <%= number_to_currency(cart.total_price) %>
      </td> 
    </tr>
  </table>
  <%= button_to 'Opróżnij koszyk', cart, method: 
        :delete, data: { confirm: 'Czy aby na pewno?' } %>
